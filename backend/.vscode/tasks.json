{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate Virtual Environment",
            "type": "shell",
            "command": ".\\.venv\\Scripts\\activate",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": ".\\.venv\\Scripts\\Activate"
            },
            "dependsOn": "Activate Virtual Environment",
            "problemMatcher": []
        },
        {
            "label": "Run User Service[django]",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "runserver",
                "8000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${backendFolder}/user_Fservice"
            },
            "dependsOn": "Activate Virtual Environment",
            "problemMatcher": []
        },
        {
            "label": "Run Accounting Service[django]",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "runserver",
                "8001"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${backendFolder}/accounting_service"
            },
            "problemMatcher": []
        }
    ],
    "variables": {
        "backendFolder": "./"
    }
}